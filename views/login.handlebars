<span class="homepage-hero-module" class="heightadjust">
   
    <div class="video-container">
           <div class="filter"></div>
                <video autoplay loop class="fillWidth">
                    <source src="./assets/picsvids/Mp4/Lonely-Chair.mp4" type="video/mp4" />Your browser does not support the video tag. I suggest you upgrade your browser.
                    <source src="./assets/picsvids/WEBM/Shoes-Stories.webm" type="video/webm" />Your browser does not support the video tag. I suggest you upgrade your browser.
                </video>
                <div class="poster hidden">
                    <img src="./assets/picsvids/Snapshots/Lonely-Chair.jpg" alt="">
                </div>
        <div class="col-sm-6 col-sm-offset-3">
            <h1><span class="fa fa-sign-in"></span> Login</h1>
            {{#if message}}
                <div class="alert alert-danger"> {{message}}</div>
            {{/if}}
            <!-- LOGIN FORM -->
            <form action="/login" method="post">
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" name="email">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-warning btn-lg">Login</button>
            </form>
            <hr>
            <p>Need an account? <a href="/signup">Signup</a></p>
            <p>Or go <a href="/">home</a>.</p>
        </div>
    </div>
</span>