<!doctype html>
<html>
<head>
	<title>Node Authentication</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>

<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-anchor"></span><h1>My Bucket List!</h1></h1>
		<a href="/logout" class="btn btn-default btn-sm">Logout</a>
	</div>
</div>
      <div class="container">
        <div class="row">
        			<div class="col-md-6 col-md-offset-3">
                <ul>
               {{#each bucketitems}}
                 {{# unless this.isAchieved}}
                 <li>
                   <div class="form-group">
        						<label for="title">Title:</label>
        						{{this.title}}
        						<br />
        						<label for="uploadImage">Upload some photos:</label>
                    <form action="/upload"
                          class="dropzone"
                          id="my-awesome-dropzone" method="post" enctype="multipart/form-data" >
                        </form>

        						<div class="form-group">
        							<label for="blogText">Share your experience :</label>
                      <textarea name=" = "blogText" "placeholder="Post Body" class="form-control" rows="10" id="body"></textarea>
          						</div>
        						<br />
        						<button type="submit" class="btn btn-success submit">Submit</button>
        					</div>

                </li>
              {{/unless}}
              {{/each}}
             </ul>
        			</div>
        		</div>
  <!-- Pass in data from poststream-routes.js -->
 </div>
		</div>



    <script src="./lib/dropzone/dropzone.js"></script>
</body>
</html>
